{
  "manifest_version": 3,
  "name": "Topic Meister",
  "description": "Topic Meister Chrome Extension",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "logo192.png"
  },
  "content_scripts": [
    {
      "js": ["static/js/content.js"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
